<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    android:background="@drawable/med12"
    tools:context=".view.SearchDrug"
    android:layout_margin="0dp"
    android:gravity="center">

    <TextView
        android:textSize="23dp"
        android:text="Search Drug By Name"
        android:layout_margin="10dp"
       android:textColor="@color/black"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <EditText
        android:gravity="center"
        android:inputType="text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter Drug Name"
        android:textColor="@color/black"
        android:textColorHint="@color/black"
        android:id="@+id/userdrugsearchname"/>

    <Button
        android:id="@+id/userdrugsearchsubmit"
        android:text="Search Drug"
        android:textSize="32dp"
        android:textColor="@color/black"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <ListView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/SearchDrugList"></ListView>

</LinearLayout>