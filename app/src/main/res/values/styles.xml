<resources>
    <!-- Application theme -->
    <style name="Theme.MedicineIntakeReminder2024" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Window Background -->
        <item name="android:windowBackground">@drawable/splash</item>

        <!-- Text Colors -->
        <item name="android:textColorPrimary">@color/black</item>
        <item name="android:textColorSecondary">@color/black</item>

        <!-- Button and TextField Styles -->
        <item name="buttonStyle">@style/ButtonStyle</item>
        <item name="editTextStyle">@style/EditTextStyle</item>

        <!-- Customize more properties here if needed -->
    </style>

    <!-- Button Style -->
    <style name="ButtonStyle">
        <item name="android:textColor">@color/black</item> <!-- Button text color -->
        <item name="android:background">@color/dark_green</item> <!-- Button background -->
        <item name="android:padding">12dp</item> <!-- Padding inside the button -->
        <item name="android:textSize">16sp</item> <!-- Button text size -->
    </style>

    <!-- EditText Style -->
    <style name="EditTextStyle">
        <item name="android:textColor">@color/black</item> <!-- EditText text color -->
        <item name="android:backgroundTint">@color/dark_green</item> <!-- EditText background tint -->
        <item name="android:textSize">16sp</item> <!-- EditText text size -->
        <item name="android:paddingStart">16dp</item> <!-- Padding for text start -->
        <item name="android:paddingEnd">16dp</item> <!-- Padding for text end -->
    </style
        ><style name="Buttonstyle5">
        <item name="android:textColor">#301562</item> <!-- EditText text color -->
        <item name="android:background">@color/mustard</item> <!-- EditText background tint -->
        <item name="android:textSize">16sp</item> <!-- EditText text size -->
        <item name="android:padding">12dp</item> <!-- Padding for text start -->

    </style>

    <!-- Text Appearance -->
    <style name="TextAppearance.MyApp" parent="TextAppearance.MaterialComponents.Body1">
        <item name="android:textColor">@color/black</item> <!-- Text color -->
        <item name="android:textSize">16sp</item> <!-- Text size -->
    </style>


    <!-- ProgressBar Style -->
    <style name="ProgressBarStyle">
        <item name="android:indeterminateOnly">true</item> <!-- Show indeterminate progress -->
        <item name="android:colorAccent">@color/colorAccent</item> <!-- Progress color -->
    </style>

    <!-- Appbar Style -->
    <style name="AppBarStyle">
        <item name="android:background">@color/dark_green</item> <!-- AppBar background color -->
        <item name="android:titleTextColor">@color/white</item> <!-- AppBar title text color -->
    </style>
</resources>
